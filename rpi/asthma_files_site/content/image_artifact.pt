<div metal:use-macro="here/main_template/macros/master">
<div metal:fill-slot="main">
    <ul tal:repeat="question view/get_questions" tal:condition="python: False">
        <!-- Don't need to dispay this list anymore ^ but we'll leave it here just in case. -->
        <li><a tal:attributes="href question/getURL" tal:content="question/Title"></a></li>
    </ul>
    <div style="text-align: center">
        <br />
        <a href="view/context/@@images/image"><img tal:condition="view/context/@@images/image/thumb" tal:replace="structure view/context/@@images/image/thumb" /></a>
        <br />
        <br />
        <!-- Button to trigger modal -->
        <a href="#myModal" role="button" class="btn btn-large" data-toggle="modal">Annotate</a>
        <!-- Modal -->
        <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Add annotation</h3>
        </div>
        <div class="modal-body">
        <form tal:attributes="action view/context/absolute_url" tal:repeat="question view/get_questions">
            <label class="checkbox">
                <input type="checkbox" tal:attributes="name question/Title; value question/Title"><span tal:content="question/Title"></span>
            </label>
        </form>
        </div>
        <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save annotation</button>
        </div>
        </div>
    </div>
</div>
</div>
